<Ukivy>: #ScreenManager
	Menu:
		name: 'menu'

	Dificuldade:
		name: 'dificuldade'

	Novo_jogo:
		name: 'novojogo'

	Recordes:
		name: 'recordes'

	Recordes_facil:
		name: 'recordes_facil'

	Recordes_medio:
		name: 'recordes_medio'

	Recordes_dificil:
		name: 'recordes_dificil'

# =================================================================================================================
<Menu>: #Menu inicial
	BoxLayout:
		id: menu_principal
		orientation: 'vertical'
		canvas:
			Color:
				rgba: 0.074, 0.105, 0.137, 1
			Rectangle:
				size: self.size
				pos: self.pos

		Image:
			source: 'images/sudoku.png'
			size_hint_y: 1
			allow_stretch: True
		BoxLayout:
			orientation: 'vertical'
			spacing: '10sp'
			padding: '50sp', 0
			Button:
				text: 'Novo Jogo'
				color: (0.913, 0.945, 0.968, 1)
				size_hint: 1, None
				size: 0, '40sp'
				background_color: (0.133, 0.454, 0.647)
				on_release:
					app.root.transition.direction = 'left'
					app.root.current='dificuldade'
			Button:
				text: 'Recordes'
				color: (0.913, 0.945, 0.968, 1)
				size_hint: 1,  None
				size: 0, '40sp'
				background_color: (0.133, 0.454, 0.647)
				on_release:
					app.root.transition.direction = 'left'
					app.root.current='recordes'
			Button:
				text: 'Remover Anúncios'
				color: (0.913, 0.945, 0.968, 1)
				size_hint: 1, None
				size: 0, '40sp'
				background_color: (0.133, 0.454, 0.647)
				on_release:
			Button:
				text: 'Sair'
				color: (0.913, 0.945, 0.968, 1)
				size_hint: 1, None
				size: 0, '40sp'
				background_color: (0.133, 0.454, 0.647)
				on_release: app.stop()
			Label:
				text: 'Created by: Venismendes'
				color: (0.913, 0.945, 0.968, 1)
				size_hint: 1, None
				size: 0, '40sp'
				align: 'center'

# =================================================================================================================
<Dificuldade>: #Tela pra escolher a dificuldade do jogo
	BoxLayout:
		orientation: 'vertical'
		canvas:
			Color:
				rgba: 0.074, 0.105, 0.137, 1
			Rectangle:
				size: self.size
				pos: self.pos
		ActionBar:
			ActionView:
				ActionPrevious:
				    app_icon: 'images/sudoku.png'
				    previous_image:
					title: 'Sudoku'
					on_release:
						app.root.transition.direction = 'right'
						app.root.current='menu'


		BoxLayout: #Box com os botões
			orientation: 'vertical'
			padding: '80sp', '0sp', '80sp', '50sp'
			spacing: '40sp'
			Button:
				size_hint: 1, None
				size: 0, '40sp'
				background_color: (0.133, 0.454, 0.647)
				text: 'Fácil'
				color: (0.913, 0.945, 0.968, 1)
				on_press: root.novojogo.facil()
				on_release:
					app.root.transition.direction = 'left'
					app.root.current='novojogo'
			Button:
				size_hint: 1, None
				size: 0, '40sp'
				background_color: (0.133, 0.454, 0.647)
				text: 'Médio'
				color: (0.913, 0.945, 0.968, 1)
				on_press: root.novojogo.medio()
				on_release:
					app.root.transition.direction = 'left'
					app.root.current='novojogo'
			Button:
				size_hint: 1, None
				size: 0, '40sp'
				background_color: (0.133, 0.454, 0.647)
				text: 'Difícil'
				color: (0.913, 0.945, 0.968, 1)
				on_press: root.novojogo.dificil()
				on_release:
					app.root.transition.direction = 'left'
					app.root.current='novojogo'

